<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ViewFarmActivity"
    android:background="#FFE88C"
    >
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:padding="20dp"

        android:background="@drawable/rounded_box_upside"
        android:backgroundTint="#D6A473"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"

            android:layout_gravity="center">

        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGRIUNO"
            android:layout_below="@id/logo"
            android:gravity="center"
            android:textColor="#416D2A"

            android:fontFamily="@font/barabara"
            android:textSize="18sp"
            >

        </TextView>
    </LinearLayout>
    <ScrollView
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="28dp"
            android:padding="28dp"
            android:background="@drawable/full_rounded_box_radius_medium"
            android:backgroundTint="#D7FFFFFF"

            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="1"
                android:layout_margin="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Farm Name: "

                    android:textColor="#416D2A"

                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    >

                </TextView>
                <TextView
                    android:id="@+id/farmName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="%data%"

                    android:textColor="#416D2A"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="1"
                android:layout_margin="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Owner Name: "

                    android:textColor="#416D2A"

                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    >

                </TextView>
                <TextView
                    android:id="@+id/ownerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="%data%"
                    android:textStyle="bold"
                    android:textColor="#416D2A"

                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="1"
                android:layout_margin="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description: "

                    android:textColor="#416D2A"

                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    >

                </TextView>
                <TextView
                    android:id="@+id/descrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="%data%"
                    android:textStyle="bold"
                    android:textColor="#416D2A"

                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="1"
                android:layout_margin="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Area Of Land: "

                    android:textColor="#416D2A"

                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    >

                </TextView>
                <TextView
                    android:id="@+id/areaofland"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="%data%"
                    android:textStyle="bold"
                    android:textColor="#416D2A"

                    android:textSize="18sp"
                    android:layout_weight="0.5"
                    >

                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suggested Bags of Fertilizer Need"
                android:layout_below="@id/logo"
                android:gravity="center"
                android:textColor="#416D2A"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="10dp"
                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_below="@id/needTitle"

                android:backgroundTint="#BAD6A473"
                android:background="@drawable/full_rounded_box_radius_medium"


                android:layout_margin="20dp"
                android:padding="8dp"
                >


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1,2,3,4">

                            <!-- Header Row -->
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Age Of Crops"
                                    android:padding="8dp"
                                    android:background="@android:color/darker_gray"
                                    android:textStyle="bold"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="14-14-14 (bags/ha)"
                                    android:padding="8dp"
                                    android:background="@android:color/darker_gray"
                                    android:textStyle="bold"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="46-0-0-0 (bags/ha)"
                                    android:padding="8dp"
                                    android:background="@android:color/darker_gray"
                                    android:textStyle="bold"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0-0-60 (bags/ha)"
                                    android:padding="8dp"
                                    android:background="@android:color/darker_gray"
                                    android:textStyle="bold"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total (bags/ha)"
                                    android:padding="8dp"
                                    android:background="@android:color/darker_gray"
                                    android:textStyle="bold"
                                    android:minWidth="100dp"/>
                            </TableRow>

                            <!-- Row 1 -->
                            <TableRow
                                android:id="@+id/tbRow1MonthOld"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1 month old"
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row1Cell141414"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row1Cell46000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row1Cell00060"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row1CellTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>
                            </TableRow>

                            <!-- Row 2 -->
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7 month old"
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row2Cell141414"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row2Cell46000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row2Cell00060"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row2CellTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>
                            </TableRow>

                            <!-- Row 3 -->
                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total no. of bags"
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row3CellTotal141414"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row3CellTotal46000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row3CellTotal0060"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>

                                <TextView
                                    android:id="@+id/row3CellTotalBag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:padding="8dp"
                                    android:background="@android:color/white"
                                    android:minWidth="100dp"/>
                            </TableRow>

                        </TableLayout>

                    </HorizontalScrollView>
                </ScrollView>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estimated Prices "
                android:layout_below="@id/logo"
                android:gravity="center"
                android:textColor="#416D2A"
                android:textStyle="bold"
                android:textSize="18sp"
                >

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Prices are from https://www.philrice.gov.ph/ricelytics/fertprices)"
                android:layout_below="@id/logo"
                android:gravity="center"
                android:textColor="#416D2A"

                android:textSize="12sp"
                >

            </TextView>

            <TextView
                android:id="@+id/ureaTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Urea (Granular) (14-14-14): "
                android:layout_below="@id/logo"
                android:gravity="center"
                android:textColor="#416D2A"

                android:textSize="16sp"
                android:layout_marginTop="18dp"
                >

            </TextView>

            <TextView
                android:id="@+id/CompleteTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete (14-14-14): "
                android:layout_below="@id/logo"
                android:gravity="center"
                android:textColor="#416D2A"

                android:textSize="16sp"
                android:layout_marginTop="18dp"
                >

            </TextView>
            <TextView
                android:id="@+id/PotashTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muriate of Potash (0-0-60): "
                android:layout_below="@id/logo"
                android:gravity="center"
                android:textColor="#416D2A"

                android:textSize="16sp"
                android:layout_marginTop="18dp"
                >

            </TextView>

            <TextView
                android:id="@+id/totalC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: "
                android:layout_below="@id/logo"
                android:gravity="center"
                android:textColor="#416D2A"

                android:textSize="16sp"
                android:layout_marginTop="18dp"
                >

            </TextView>
            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Update"
                android:textSize="18dp"
                android:fontFamily="@font/barabara"
                android:textColor="#FFFFFF"
                android:background="@drawable/full_rounded_box_radius_medium"
                android:backgroundTint="#427E17"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                >

            </Button>
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Delete"
                android:textSize="18dp"
                android:fontFamily="@font/barabara"
                android:textColor="#FFFFFF"
                android:background="@drawable/full_rounded_box_radius_medium"
                android:backgroundTint="#FF5252"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"
                >

            </Button>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>